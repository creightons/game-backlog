doctype html

html
	head
		meta(charset='utf-8')
	body
		form(method='get' action='/search')
			label(for='search') Search
			input(type='text' id='search' name='value')
			br
			input(type='submit' value='Submit')
#results
	if results && results.length > 0
		h1 Results
		ul
		- for (var i = 0; i < results.length; i++) {
			li
				div= results[i].name			
		- }
